<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   style="@style/itemlist.cons">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_imv"
        style="@style/itemlist.item.avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/username_tv"
        style="@style/itemlist.item"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_imv"
        app:layout_constraintStart_toEndOf="@+id/avatar_imv"
        app:layout_constraintTop_toTopOf="@+id/avatar_imv"
        tools:text="username" />

</androidx.constraintlayout.widget.ConstraintLayout>